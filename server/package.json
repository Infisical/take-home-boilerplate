{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "migration:new": "tsx ./src/db/create-db-migration.js",
    "migration:up": "knex --knexfile ./src/db/knexfile.js --client pg migrate:up",
    "migration:down": "knex --knexfile ./src/db/knexfile.js --client pg migrate:down",
    "migration:list": "knex --knexfile ./src/db/knexfile.js --client pg migrate:list",
    "migration:latest": "knex --knexfile ./src/db/knexfile.js --client pg migrate:latest",
    "migration:status": "knex --knexfile ./src/db/knexfile.js --client pg migrate:status",
    "migration:rollback": "knex --knexfile ./src/db/knexfile.js migrate:rollback",
    "migration:unlock": "knex --knexfile ./src/db/knexfile.js migrate:unlock"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sindresorhus/slugify": "^2.2.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.17.1",
    "knex": "^3.1.0",
    "nodemon": "^3.1.9",
    "pg": "^8.2.0",
    "prompt-sync": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "prettier": "^2.8.8",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "semi": false,
    "printWidth": 80,
    "overrides": [
      {
        "files": "tests/**/*",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "eslintIgnore": [],
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "extends": [
      "standard",
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/eslint-recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "camelcase": "off",
      "dot-notation": "off",
      "prettier/prettier": "error",
      "no-useless-constructor": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
